  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container-fluid">
      <!-- notices and warnings -->
			<% if notice %>
				<p class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
				<p class="alert alert-danger"><%= alert %></p>
			<% end %>

      <%= yield %>
      <%= yield :javascript%>
    </div>

    <script type="text/javascript">
      logoResize();
    </script>
  </body>
</html>
